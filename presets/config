#######################################
# CONFIGURATION FILE FOR SYSFEX 			#
# This config file tells sysfex about #
# "how" to represent stuffs						#
#######################################

# Lines starting with '#' are comments

# Gap between textart/ascii and information
pregap = 4

# Gap between info key and value
# For example: If gap equals 3, then
#				key →   value
gap = 0

# Print ASCII?
ascii = 1

# Path to ASCII
ascii_path = /opt/sysfex/ascii/arch.txt

# Print text and ASCII side by side?
text_beside_ascii = 1

# The character/string/whatever which will be used to represent the color palette
color_block = ⬤

# Clear terminal screen before executing Sysfex?
clear_screen = 0

# Print stuffs from a specific line/column of the terminal window
# Only works when "clear_screen" = 1, for now
starting_line = 0
starting_column = 0