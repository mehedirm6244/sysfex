#######################################
# CONFIGURATION FILE FOR SYSFEX 			#
# This config file tells sysfex about #
# "how" to represent stuffs						#
#######################################

# Lines starting with '#' are comments

# Gap between textart/ascii and information
pregap = 4

# Gap between info key and value
# For example: If gap equals 3, then
#				key →   value
gap = 0

# Print ASCII?
ascii = 1

# Path to ASCII
# ascii_path may point to an image as well
# Supported formats: 
#     ".png", ".jpg", ".jpeg", ".bmp", ".webp"
# "viu" is used as backend
ascii_path = /opt/sysfex/ascii/arch.txt

# For if ASCII is image
# image_width = The number of cells occupied by the image in X axis
image_width = 36

# Print text and ASCII side by side?
text_beside_ascii = 1

# The character to represent the color palette
color_block = ⬤

# Clear terminal screen before executing Sysfex?
clear_screen = 0